<div class="post_main">
  <h1><%= @post[:title]%></h1>
  <p><img src="/david_bio.png" width="35" style="margin-right: 5px;"><%= @post[:author] + " at " + @post[:posted_at].to_s %></p>
  <hr>
  <p><%= @post[:rendered_content] %></p>
  <% if session[:login] %>
    <hr>
    <a href=<%= "/posts/#{@post[:id]}/edit" %>>Edit</a>
    <form action=<%= "/posts/#{@post[:id]}" %> method="post">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" value="Delete">
    </form>
<% end %>
</div>