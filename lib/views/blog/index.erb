<% @posts.each do |post| %>
  <div class="post_index">
    <h2 class="left"><a href="/posts/<%= post[:id]%>"><%= post[:title] %></a></h2>
    <p class="left" style="padding-left: 10px; line-height: 2.3">Posted at: <%= post[:posted_at].to_s %></p>
    <div class="clearfix"></div>
  </div>
<% end %>
<hr>
<% if session[:login] %>
  <a href="/posts/new">New Post</a>
<% end %>